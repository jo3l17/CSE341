<!DOCTYPE html>
<html>

<head>
    <% include ../includes/header.ejs %>
</head>

<body>
    <% include ../includes/nav.ejs %>
        <div class="jumbotron text-center">
            <div class="container">
                <h1>
                    <%= title %>
                </h1>
            </div>
        </div>
        <div class="container">
            <h1>Live chat:</h1>
            <ul id="chatBox" class="chat">
            </ul>
        </div>
        <% if (user) { %>
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="mb-3">
                            <label for="exampleFormControlTextarea1" class="form-label"><%= user %></label>
                            <textarea class="form-control" name="message" id="message" rows="3"></textarea>
                        </div>
                        <button onclick="postMessage()" class="btn btn-primary">Send</button>
                        <input type="hidden" value="<%= user %>" name="user" id="user">
                    </div>
                </div>
            </div>
            <% } else { %>
                <p>No login, view only.</p>
            <% } %>
</body>
<script src="/socket.io/socket.io.js"></script>
<script src="/scripts/pa12-chat.js"></script>

</html>